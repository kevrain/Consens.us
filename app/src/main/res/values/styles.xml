<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Widget.TextView.Normal" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Light.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold.Medium" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold.ExtraLarge" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Medium.ttf</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.FloatedTextHint" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/white_transparent</item>
    </style>

    <style name="AppTheme.DefaultMargins" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="DefaultToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
