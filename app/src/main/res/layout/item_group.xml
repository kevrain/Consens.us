<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvGroupName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_height="wrap_content" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_toRightOf="@+id/tvGroupName"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgGroupCollage1"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgGroupCollage2"
            android:layout_toStartOf="@+id/imgGroupCollage2" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgGroupCollage4"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imgGroupCollage3"
            android:layout_toStartOf="@+id/imgGroupCollage3" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgGroupCollage2"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imgGroupCollage3"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imgGroupCollage2"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvGroupMembers"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGroupName"/>

</RelativeLayout>